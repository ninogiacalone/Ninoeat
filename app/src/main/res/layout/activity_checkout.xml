<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lin">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/riepilogo"
       android:text="RIEPILOGO"
       android:textSize="25dp"
       android:padding="@dimen/cardview_default_radius"

       android:textColor="@color/colorAccent"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/riepnome"
    android:text="Nome"
    android:textSize="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indirizzoriep"
            android:text="Indirizzo"
            android:textSize="25dp"/>

    </LinearLayout>



        <android.support.v7.widget.RecyclerView

            android:layout_margin="@dimen/cardview_default_radius"
    android:layout_width="match_parent"
    android:layout_height="300dp"
            android:id="@+id/prodd"
            android:layout_below="@+id/lin"
            style="@style/Base.Animation.AppCompat.Dialog"/>


        <TextView
            android:id="@+id/proddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL:"
android:layout_below="@+id/prodd"
            android:textColor="@color/colorAccent"
            android:textSize="25dp"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAGA ADESSO"
            android:id="@+id/paga"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="570dp"
            style="@style/Base.TextAppearance.AppCompat.Button"



            />












</RelativeLayout>
