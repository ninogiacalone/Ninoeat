<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/quantita_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/prodd_nametv"
        tools:text="2x" />

    <TextView
        android:id="@+id/prodd_nametv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_marginEnd="34dp"
        android:layout_toStartOf="@+id/subtt"
        tools:text="Hamburgher" />

    <TextView
        android:id="@+id/subtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/prodd_nametv"
        android:layout_alignBottom="@+id/prodd_nametv"
        android:layout_centerHorizontal="true"
        tools:text="10" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/ic_menu_delete" />





</RelativeLayout>